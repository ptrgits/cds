{
  "name": "mobile",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/mobile/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "dev",
      "configurations": {
        "dev": {
          "command": "rm -rf esm && babel ./src --out-dir esm --extensions .ts,.tsx,.js,.jsx --copy-files --no-copy-ignored"
        },
        "prod": {
          "commands": [
            "rm -rf esm && babel ./src --out-dir esm --extensions .ts,.tsx,.js,.jsx --copy-files --no-copy-ignored"
          ],
          "parallel": false
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "{projectRoot}/jest.config.js"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "dev",
      "configurations": {
        "dev": {
          "command": "tsc --build --pretty --verbose"
        },
        "prod": {
          "commands": [
            "tsc --build ./tsconfig.build.json --pretty --verbose",
            "prettier ./dts --write --loglevel warn"
          ],
          "parallel": false
        }
      }
    },
    "publish-figma": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "figma connect publish --token $FIGMA_CODE_CONNECT_TOKEN"
        ],
        "cwd": "packages/mobile"
      }
    }
  }
}
